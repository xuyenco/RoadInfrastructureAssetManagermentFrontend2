@page
@model RoadInfrastructureAssetManagementFrontend2.Pages.MaintenanceHistory.MaintenanceHistoryCreateModel
@{
    ViewData["Title"] = "Tạo Lịch sử Bảo trì Mới";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<script src="https://cdn.tailwindcss.com"></script>
<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>

<div class="container mx-auto px-4 py-10 max-w-4xl">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Tạo Lịch sử Bảo trì Mới</h1>

    <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-2xl font-semibold text-gray-700 mb-4 border-b-2 border-blue-500 pb-2">Thông tin Lịch sử Bảo trì</h3>

        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4" role="alert">
                @TempData["Error"]
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded-lg mb-4" role="alert">
                @TempData["Warning"]
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4" role="alert">
                @TempData["Success"]
            </div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4" role="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form method="post" enctype="multipart/form-data" class="space-y-6">
            <div>
                <label asp-for="MaintenanceHistory.asset_id" class="block text-gray-700 font-semibold mb-1">Asset ID</label>
                <input asp-for="MaintenanceHistory.asset_id" type="number" min="1" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="MaintenanceHistory.asset_id" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="MaintenanceHistory.task_id" class="block text-gray-700 font-semibold mb-1">Task ID</label>
                <input asp-for="MaintenanceHistory.task_id" type="number" min="1" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="MaintenanceHistory.task_id" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label for="Files" class="block text-gray-700 font-semibold mb-1">Tài liệu liên quan (có thể chọn nhiều tệp)</label>
                <input type="file" id="Files" name="Files" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" multiple accept="image/*,.pdf,.doc,.docx" />
                <span asp-validation-for="Files" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-center space-x-4 mt-6">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition duration-200 flex items-center">
                    <i class="fas fa-save mr-2"></i> Tạo Lịch sử Bảo trì
                </button>
                <a href="/MaintenanceHistory/Index" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition duration-200 flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>