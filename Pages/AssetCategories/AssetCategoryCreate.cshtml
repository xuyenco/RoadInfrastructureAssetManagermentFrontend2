@page
@model RoadInfrastructureAssetManagementFrontend2.Pages.AssetCategories.AssetCagetoryCreateModel
@{
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo Danh Mục Tài Sản Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .attribute-row {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .form-control, .form-select {
            margin-right: 10px;
            width: auto;
            flex-grow: 1;
        }

        .btn-add {
            margin-top: 10px;
        }

        .btn-remove {
            margin-left: 10px;
            color: #dc3545;
            border: none;
            background: none;
            font-size: 1.2rem;
            cursor: pointer;
        }

        .btn-remove:hover {
            color: #b02a37;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Tạo Danh Mục Tài Sản Mới</h1>
        @if (!ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
        <form method="post" enctype="multipart/form-data" class="form-section">
            <div class="mb-3">
                <label for="category_name" class="form-label">Tên danh mục:</label>
                <input type="text" id="category_name" name="category_name" class="form-control" value="@Model.AssetCategory.category_name" required />
            </div>
            <div class="mb-3">
                <label for="geometry_type" class="form-label">Loại hình học:</label>
                <select id="geometry_type" name="geometry_type" class="form-select" required>
                    <option value=" ">Hãy chọn loại dữ liệu</option>
                    <option value="point">Point</option>
                    <option value="linestring">LineString</option>
                    <option value="polygon">Polygon</option>
                </select>
            </div>

            <h3>Thuộc tính (Attributes Schema)</h3>
            <div id="attributes-container"></div>
            <button type="button" class="btn btn-primary btn-add" onclick="addAttribute()">Thêm thuộc tính</button>

            <div class="mb-3">
                <label for="sample_image" class="form-label">Ảnh mẫu:</label>
                <input type="file" id="sample_image" name="sample_image" class="form-control" accept=".png,.jpg,.jpeg" required />
            </div>

            <div class="mb-3">
                <label for="icon" class="form-label">Icon:</label>
                <input type="file" id="icon" name="icon" class="form-control" accept=".png,.jpg,.jpeg" required />
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success">Tạo danh mục</button>
                <a href="/AssetCagetories/Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>

    <script>
        let attributeIndex = 0;

        function addAttribute() {
            const container = document.getElementById('attributes-container');
            const html = `
                <div class="attribute-row">
                    <input type="text" name="attributes[${attributeIndex}].Name" placeholder="Tên thuộc tính" class="form-control" required />
                    <select name="attributes[${attributeIndex}].Type" class="form-select" required>
                        <option value="string">String</option>
                        <option value="integer">Integer</option>
                        <option value="number">Number</option>
                        <option value="boolean">Boolean</option>
                    </select>
                    <input type="text" name="attributes[${attributeIndex}].Description" placeholder="Mô tả" class="form-control" />
                    <label class="checkbox me-3">
                        <input type="checkbox" name="attributes[${attributeIndex}].IsRequired" /> Bắt buộc
                    </label>
                    <input type="text" name="attributes[${attributeIndex}].EnumValuesStr" placeholder="Enum values (cách bởi dấu phẩy)" class="form-control" />
                    <button type="button" class="btn-remove" onclick="removeRow(this)">✕</button>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', html);
            attributeIndex++;
        }

        function removeRow(button) {
            button.parentElement.remove();
        }
    </script>
</body>
</html>